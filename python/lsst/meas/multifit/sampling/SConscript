# -*- python -*-
import re
Import("env")

pkg = env["eups_product"]
env.CheckSwig("python", ilang="c++", 
            includedProducts="utils daf_base daf_data daf_persistence pex_logging pex_policy pex_exceptions security afw ndarray meas_multifit")
env.LoadableModuleIncomplete("_samplingLib", Split("samplingLib.i"), 
                             SWIGFLAGS=env['SWIGFLAGS'] + " -DIMPORT_FUNCTION_I",
                             CCFLAGS=re.sub("-Wall", "", " ".join(env['CCFLAGS'])),
                             LIBS=env.getlibs(pkg))
