#<? cfg paf dictionary ?>
target: lsst.meas.multifit.SingleLinearParameterFitter

definitions: {
    iterationMax: {
        type: "int"
        description: "specifies maximum number of iterations"
        minOccurs: 1       
        maxOccurs: 1
        default: 0
    }
    tolerance: {
        type: "double"
        description: "minuit will stop iterating when the expected distance (edm)
                      will be: edm < tolerance* 10**-3."                      
        minOccurs:1
        maxOccurs:1
        default: 0.1
    }
    strategy: {
        type: "int"
        description: "specifies the minuit strategy to use. 0-2"
        minOccurs: 1
        maxOccurs: 1
        allowed: {
            min: 0
            max: 2
        }
        default:1
    }
    doAnalyticGradient: {
        type: "bool"
        description: "if true, a model's derivatives will be used to analytically 
                      compute the gradient. Otherwise, numeric derivatives will be
                      computed by minuit."
        default: false
        minOccurs: 1
        maxOccurs: 1
    }
    checkGradient: {
        type: "bool"
        description: "specifies whether to use the model's derivatives to compute the gradient"
        minOccurs: 1
        maxOccurs: 1
        default: false
    }
    algorithm: {
        type: "string"
        description: "specifies which minuit optimizer to use"
        minOccurs: 1
        maxOccurs: 1
        default: "MIGRAD"
        allowed:{
            value: "MIGRAD"          
        }
        allowed: {
            value: "SIMPLEX"
        }
    }
    doSnapshots: {
        type: "bool"
        description: "if true, write FITS snapshot images at every iteration."
        default: false
        minOccurs: 1
        maxOccurs: 1
    }
    snapshotFormat: {
        type: "string"
        description: "a format string used to name FITS files that provide a snapshot of a 
                      model evaluator."
        default: "multifit-minuit-snapshot-%04i.fits"
        minOccurs: 1
        maxOccurs: 1
    }
}
