#<? cfg paf dictionary ?>
#
# 
target: ShapeletModelPhotometry

definitions: {
    enabled: {
        type: "bool"
        description: "toggle on/off whether or not to do this measurement"
        minOccurs: 1
        maxOccurs: 1
        default: true
    }
    usePixelWeights: {
        type: "bool"
        description: "toggle on/off weighing the data by per-pixel variance"
        minOccurs: 1
        maxOccurs: 1
        default: false
    }
    fitDeltaFunction: {
        type: "bool"
        description: "toggle on/off whether or not to fit a delta function"
        minOccurs: 1
        maxOccurs: 1
        default: true
    }
    basisSize: {
        type: "int"
        description: "number of basis function in shapelet expansion"
        minOccurs: 1
        maxOccurs: 1
       default: 8
    }
    nGrowFp:{
        type: "int"        
        description: "amount to grow input footprint"
        minOccurs: 1
        maxOccurs: 1
        default: 1
    }
    psfShapeletOrder:{
        type: "int"
        description: "Desired shapelet order when converting 
                     a non-shapelet psf to a shapelet psf"
        minOccurs: 1
        maxOccurs: 1
        default: 4
    }

    isPositionActive: {
        type: "bool"     
        description: "if true will fit for position"
        minOccurs: 1
        maxOccurs: 1
        default: false
    }
    isRadiusActive: {
        type: "bool"
        description: "if true will fit for radius"
        minOccurs: 1
        maxOccurs: 1
        default: true
    }
    isEllipticityActive: {
        type: "bool"
        description: "if true will fit for ellipticity"
        minOccurs: 1
        maxOccurs: 1
        default: true
    }
    maskPlaneName: {
        type: "string"
        description: "list of planes to consider when masking the footprint"
        minOccurs: 1        
        default: "BAD" "SAT" "CR" "EDGE" "INTRP"
    }
    nTestPoints: {
        type: "int"
        description: "number of parameter points to evaluate"
        minOccurs: 1
        maxOccurs: 1
        default: 5
    }
}
