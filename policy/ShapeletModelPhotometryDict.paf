#<? cfg paf dictionary ?>
#
# 
target: ShapeletModelPhotometry

definitions: {
    enabled: {
        type: "bool"
        description: "toggle on/off whether or not to do this measurement"
        minOccurs: 1
        maxOccurs: 1
        default: true
    }
    usePixelWeights: {
        type: "bool"
        description: "toggle on/off weighing the data by per-pixel variance"
        minOccurs: 1
        maxOccurs: 1
        default: false
    }
    fitDeltaFunction: {
        type: "bool"
        description: "toggle on/off whether or not to fit a delta function"
        minOccurs: 1
        maxOccurs: 1
        default: true
    }
    fitExponential: {
        type: "bool"
        description: "toggle on/off whether or not to fit an exponential profile"
        minOccurs: 1
        maxOccurs: 1
        default: true
    }
    fitDeVaucouleur: {
        type: "bool"
        description: "toggle on/off whether or not to fit a de Vaucouleur profile"
        minOccurs: 1
        maxOccurs: 1
        default: true
    }
    shapeletOrder: {
        type: "int"
        description: "order of shapelet expansion for galaxy model (or < 0 for no shapelet component)"
        minOccurs: 1
        maxOccurs: 1
       default: 2
    }
    nGrowFp:{
        type: "int"        
        description: "amount to grow input footprint"
        minOccurs: 1
        maxOccurs: 1
        default: 3
    }
    psfShapeletOrder:{
        type: "int"
        description: "Desired shapelet order when converting a non-shapelet psf to a shapelet psf"
        minOccurs: 1
        maxOccurs: 1
        default: 4
    }
    ellipticityStepSize:{
        type: "double"
        description: "Size of additional ellipticity steps."
        minOccurs: 1
        maxOccurs: 1
        default: 0.2
    }
    ellipticityStepCount:{
        type: "int"
        description: "Number of additional ellipticity steps (in each direction and dimension)."
        minOccurs: 1
        maxOccurs: 1
        default: 0
    }
    radiusMaxFactor:{
        type: "double"
        description: "Sets upper limit of radius points in brute-force grid."
        minOccurs: 1
        maxOccurs: 1
        default: 2.0
    }
    radiusMinFactor:{
        type: "double"
        description: "Sets lower limit of radius points in brute-force grid."
        minOccurs: 1
        maxOccurs: 1
        default: 0.5
    }
    radiusStepCount:{
        type: "int"
        description: "Number of radius points in brute-force grid."
        minOccurs: 1
        maxOccurs: 1
        default: 3
    }
    maskPlaneName: {
        type: "string"
        description: "list of planes to consider when masking the footprint"
        minOccurs: 1        
        default: "BAD" "SAT" "CR" "EDGE" "INTRP"
    }
}
