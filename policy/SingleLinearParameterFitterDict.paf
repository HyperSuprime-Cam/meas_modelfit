#<? cfg paf dictionary ?>
target: lsst.meas.multifit.SingleLinearParameterFitter

definitions: {
    terminationType: {
        type: "string"
        description: "Determine which conditions the fitter terminates on. 
                      Multiple termination conditions may be set"
        minOccurs: 1
        allowed: {
            value: "dChisq"
            description: "Fit is considered to converge if the difference
                          chisq values between two iterations drops below
                          threshold. The threshold value must be specified
                          with the item dChisqThreshold"
        }
        allowed: {
            value: "iteration"
            descrption: "terminate after N iterations. N must be specified
                         with the item iterationMax"
        }
        allowed: {
            value: "step"
            description: "Fit is considered to converge if the norm of the
                          step size for the nonlinear parameters drops below
                          threshold. The Threshold value must be specified
                          with the item stepThreshold"
        }
    }
    iterationMax: {
        type: "int"
        description: "when terminationType=iteration, this value specifies
                      how many iterations to take before terminating the fit."
        minOccurs: 0
        maxOccurs: 1
        default: 50
    }
    dChisqThreshold: {
        type: "double"
        description: "when terminationType=dChisq, this value specifies 
                      the threshold of determining convergence. Typical 
                      determined by floating-point arithmetic limits"
        minOccurs:0
        maxOccurs:1
        default: 0.000001
    }
    stepThreshold: {
        type: "double"
        description: "when terminationType=step, this value specifies 
                      the threshold of determining convergence. May be 
                      determined by floating-point arithmetic limits"
        minOccurs:0
        maxOccurs:1
        default: 0.000001
    }
}
